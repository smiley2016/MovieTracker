<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <set>
            <objectAnimator
                android:duration="200"
                android:propertyName="translationZ"
                android:valueTo="@dimen/verticalGridView_element_normalSize"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="200"
                android:propertyName="scaleX"
                android:valueTo="@string/verticalGridView_element_setScaleSizeTo"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="200"
                android:propertyName="scaleY"
                android:valueTo="@string/verticalGridView_element_setScaleSizeTo"
                android:valueType="floatType" />

        </set>
    </item>

    <item android:state_selected="false">
        <set>
            <objectAnimator
                android:duration="200"
                android:propertyName="translationZ"
                android:valueTo="@dimen/verticalGridView_element_normalSize"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="200"
                android:propertyName="scaleX"
                android:valueTo="@string/verticalGridView_element_normalScaleSize"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="200"
                android:propertyName="scaleY"
                android:valueTo="@string/verticalGridView_element_normalScaleSize"
                android:valueType="floatType" />


        </set>
    </item>

</selector>
