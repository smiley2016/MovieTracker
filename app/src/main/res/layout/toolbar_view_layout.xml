<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/toolbar_view_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="85dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginEnd="56dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:focusable="false"
            >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/logoipsum_width"
                android:layout_height="@dimen/logoipsum_height"
                android:src="@drawable/logo_ipsum"
                android:focusable="false"
                />


            <ImageView
                android:id="@+id/toolbar_settings"
                android:src="@drawable/settings_icon"
                android:focusable="true"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="8dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="top|end"
                android:background="@drawable/toolbar_component_background_selector"
                android:stateListAnimator="@animator/toolbar_component_animator"
                />

            <ImageView
                android:id="@+id/toolbar_search"
                android:focusable="true"
                android:background="@drawable/toolbar_component_background_selector"
                android:src="@drawable/search_icon"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:padding="5dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="top|end"
                android:layout_marginEnd="24dp"
                android:stateListAnimator="@animator/toolbar_component_animator"
                />
        </androidx.appcompat.widget.Toolbar>
</RelativeLayout>
