<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cast_element_layout"
    style="@style/CastElement"
    android:clipToPadding="false"
    android:focusable="true"
    android:stateListAnimator="@animator/cast_element_animator">


    <ImageView
        android:id="@+id/actor_picture"
        style="@style/CastElementActorPicture"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/empty_string" />

    <ProgressBar
        android:id="@+id/cast_element_progress_bar"
        style="@style/CastElementProgressBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/actor_name"
        style="@style/CastElementActorName"
        android:layout_below="@id/actor_picture"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        />


</RelativeLayout>