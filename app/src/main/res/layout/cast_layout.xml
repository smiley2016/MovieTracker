<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cast_section_layout"
    android:layout_width="@dimen/cast_layout_width"
    android:layout_height="@dimen/cast_layout_height"
    android:layout_marginTop="@dimen/cast_layout_marginTop">

    <TextView
        android:id="@+id/cast_TextView"
        style="@style/CastLayoutTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/cast"
        />

    <androidx.leanback.widget.HorizontalGridView
        android:id="@+id/cast_actors_grid_view"
        style="@style/CastLayoutHorizontalGridView"
        android:layout_below="@id/cast_TextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:clipToPadding="false"
         />

</RelativeLayout>