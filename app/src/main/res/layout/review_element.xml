<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/review_element_layout"
    android:layout_width="@dimen/review_element_width"
    android:layout_height="@dimen/review_element_height"
    android:background="@color/base_app_color"
    android:clipToPadding="false"
    android:focusable="true"
    android:stateListAnimator="@animator/review_element_animator">

    <TextView
        android:id="@+id/review_comment"
        android:layout_width="@dimen/review_element_comment_width"
        android:layout_height="@dimen/review_element_comment_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/review_element_comment_marginStart"
        android:layout_marginTop="@dimen/review_element_comment_marginTop"
        android:layout_marginEnd="@dimen/review_element_comment_marginEnd"
        android:fontFamily="sans-serif"
        android:gravity="start"
        android:maxLines="8"
        android:textSize="@dimen/review_element_comment_size" />

    <TextView
        android:id="@+id/reviewer"
        android:layout_width="168dp"
        android:layout_height="16dp"
        android:layout_below="@id/review_comment"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="Roman"
        android:gravity="start"
        android:text="@string/review_by"
        android:textSize="10sp" />

</RelativeLayout>