<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/similar_videos"
    android:layout_width="960dp"
    android:layout_height="216dp">

    <TextView
        android:id="@+id/video_text_view"
        style="@style/PlayerRecommendedVideos"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/videos" />

    <androidx.leanback.widget.HorizontalGridView
        android:id="@+id/videos_GridView"
        style="@style/PlayerRecommendedVideosHorizontalGridView"
        android:layout_below="@id/video_text_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:clipToPadding="false"
        />

</RelativeLayout>