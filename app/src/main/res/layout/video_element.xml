<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_element_layout"
    android:layout_width="184dp"
    android:layout_height="158dp"
    android:layout_marginBottom="16dp"
    android:background="@color/rounded_square_color"
    android:focusable="true"
    android:stateListAnimator="@animator/video_element_animator">

    <FrameLayout
        android:id="@+id/movie_detail_frame_layout"
        android:layout_width="184dp"
        android:layout_height="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/video_thumbnail">

        <ImageView
            android:id="@+id/subtract"
            android:layout_width="13.33dp"
            android:layout_height="13.33dp"
            android:layout_marginStart="164dp"
            android:layout_marginTop="9.33dp"
            android:layout_marginEnd="9.33dp"
            android:layout_marginBottom="9.33dp"

            />

        <TextView
            android:id="@+id/video_title"
            android:layout_width="144dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:textSize="12sp"

            />


    </FrameLayout>

    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="184dp"
        android:layout_height="104dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/movie_detail_frame_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>